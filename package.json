    "@parcel/config-webextension": "^2.10.3",
    "@types/chrome": "^0.0.253",
    "parcel": "^2.10.3",
    "process": "^0.11.10",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axe-core": "^4.8.2"
  }
}
